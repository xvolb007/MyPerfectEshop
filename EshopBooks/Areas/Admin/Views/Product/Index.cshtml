@model List<Product>
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2>
				Product List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="Create" class="btn btnalert-primary">
				<i class="bi bi-plus-circle-dotted">Create New Product</i>
			</a>
		</div>
	</div>
		<table class="table table-bordered table-striped align-items-center">
			<thead>
				<tr>
					<th scope="col">Title</th>
					<th scope="col">ISBN</th>
					<th scope="col">Price</th>
					<th scope="col">Author</th>
					@* <th scope="col">Category</th> *@

				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model)
				{
					<tr class="table-primary">
						<td>@obj.Title</td>
						<td>@obj.ISBN</td>
						<td>@obj.Price</td>
						<td>@obj.Author</td>
						@* <td>@obj.Category</td> *@

						<td>
							<div class="btn-group" role="group">
								<a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
										<i class="bi bi-pencil-square"></i>Edit
								</a>
							<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn bg-danger text-bg-dark">
								<i class="bi bi-trash"></i>Delete
								</a>
							</div>
						</td>
					</tr>
				}

			</tbody>
		</table>
</div>
